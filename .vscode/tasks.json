{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/**.cpp",
                "-I${workspaceFolder}/curl-8.10.1_1-win64-mingw/include",   // Include curl headers
                "-L${workspaceFolder}/curl-8.10.1_1-win64-mingw/lib",       // Library path for curl
                "-lcurl", // Link with curl library
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
            ],
            "options": {
                "cwd": "${workspaceFolder}/Tracker" // Set the current working directory
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
