{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C\\C++: g++.exe build active file (Release)",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-O2", // Enable optimizations for Release mode
                //"${workspaceFolder}\\src\\*.cpp",
                "${workspaceFolder}\\src\\main.cpp",
                "-I${workspaceFolder}\\lib\\curl-8.10.1_1-win64-mingw\\include",   // Include curl headers
                "-L${workspaceFolder}\\lib\\curl-8.10.1_1-win64-mingw\\lib",       // Library path for curl
                "-lcurl", // Link with curl library
                "-lshell32", // Link with Shell32.lib

                // Makes it so a console doesn't open when running program
                // Also makes it so VsCode console doesn't print anything
                //"-mwindows",
                
                "-o",
                //"${fileDirname}\\${fileBasenameNoExtension}.exe"
                //{workspaceFolder} is Daily-Commit-Tracker
                "${workspaceFolder}\\bin\\Daily-Commit-Tracker.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\src" // Set the current working directory
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task configured for Release mode."
        }
    ]
}
