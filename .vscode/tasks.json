{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",

                // .cpp files
                "${workspaceFolder}\\src\\main.cpp",
                "${workspaceFolder}\\src\\tokens.cpp",
                "${workspaceFolder}\\src\\tray.cpp",
                "${workspaceFolder}\\src\\tzone.cpp",
                "${workspaceFolder}\\src\\tracker.cpp",

                // curl
                "-I${workspaceFolder}\\lib\\curl-8.10.1_1-win64-mingw\\include",   // Include curl headers
                "-L${workspaceFolder}\\lib\\curl-8.10.1_1-win64-mingw\\lib",       // Library path for curl
                "-lcurl", // Link with curl library
                "-lshell32", // Link with Shell32.lib

                // Makes it so a console doesn't open when running program
                // Also makes it so VsCode console doesn't print anything
                //"-mwindows",

                "-o",
                "${workspaceFolder}\\bin\\Daily-Commit-Tracker.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}